<h1>Listing opportunities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Country</th>
    <th>Area</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Applicants</th>
    <th>Status</th>
    <th>Recruiter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @opportunities.each do |opportunity| %>
  <tr>
    <td><%= opportunity.name %></td>
    <td><%= opportunity.body %></td>
    <td><%= opportunity.country %></td>
    <td><%= opportunity.area %></td>
    <td><%= opportunity.latitude %></td>
    <td><%= opportunity.longitude %></td>
    <td><%= opportunity.start_date %></td>
    <td><%= opportunity.end_date %></td>
    <td><%= opportunity.applicants %></td>
    <td><%= opportunity.status %></td>
    <td><%= opportunity.recruiter_id %></td>
    <td><%= link_to 'Show', opportunity %></td>
    <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
    <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

